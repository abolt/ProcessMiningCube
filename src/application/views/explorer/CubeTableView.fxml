<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<VBox fx:id="tableSettingsPanel" alignment="TOP_CENTER" BorderPane.alignment="CENTER">
			<children>
				<Label alignment="CENTER" contentDisplay="CENTER" nodeOrientation="LEFT_TO_RIGHT" text="Table Settings" textAlignment="CENTER">
					<font>
						<Font name="System Bold" size="16.0" />
					</font>
					<VBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</VBox.margin>
				</Label>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <VBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <ToggleSwitch text="Hide empty rows" />
                        <ToggleSwitch text="Hide empty columns" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <ToggleSwitch text="Row Merging" />
                        <ToggleSwitch text="Column Merging" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_RIGHT" spacing="5.0">
                     <children>
                        <ToggleSwitch text="Auto-update Table" />
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Update Table" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_RIGHT" spacing="5.0">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Label text="Show Metric: " />
                              <ChoiceBox />
                           </children>
                        </HBox>
                        <Button mnemonicParsing="false" text="Cell Filters">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
			</children>
		</VBox>
	</top>
</fx:root>

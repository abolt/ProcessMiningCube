<?xml version="1.0" encoding="UTF-8"?>

<?import org.controlsfx.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import org.controlsfx.control.RangeSlider?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<VBox alignment="CENTER" BorderPane.alignment="CENTER">
			<children>
				<HBox alignment="CENTER">
					<children>
						<Label text="Attribute name: " />
						<TextField fx:id="textField" editable="false" />
					</children>
					<VBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</VBox.margin>
				</HBox>
				<Label text="Selected Value Range" underline="true">
					<VBox.margin>
						<Insets top="20.0" />
					</VBox.margin>
				</Label>
				<VBox fx:id="box" alignment="CENTER">
					<children>
						<RangeSlider fx:id="slider" />
						<HBox alignment="CENTER_RIGHT">
							<children>
								<Label text="From:">
									<HBox.margin>
										<Insets right="10.0" />
									</HBox.margin>
								</Label>
								<TextField fx:id="from" alignment="CENTER_RIGHT">
									<HBox.margin>
										<Insets right="20.0" />
									</HBox.margin>
								</TextField>
								<!-- <ToggleSwitch fx:id="from_inclusive" alignment="CENTER" contentDisplay="CENTER" selected="true" text="Inclusive" textAlignment="RIGHT">
									<padding>
										<Insets top="5.0" />
									</padding>
								</ToggleSwitch> -->
							</children>
							<VBox.margin>
								<Insets bottom="10.0" />
							</VBox.margin>
						</HBox>
						<HBox alignment="CENTER_RIGHT">
							<children>
								<Label text="To:">
									<HBox.margin>
										<Insets right="10.0" />
									</HBox.margin>
								</Label>
								<TextField fx:id="to" alignment="CENTER_RIGHT">
									<HBox.margin>
										<Insets right="20.0" />
									</HBox.margin>
								</TextField>
								<!--   <ToggleSwitch fx:id="to_inclusive" alignment="CENTER" selected="true" text="Inclusive" textAlignment="RIGHT">
									<padding>
										<Insets top="5.0" />
									</padding>
								</ToggleSwitch>-->
							</children>
							<VBox.margin>
								<Insets />
							</VBox.margin>
						</HBox>
					</children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
				</VBox>
			</children>
		</VBox>
	</top>
</fx:root>

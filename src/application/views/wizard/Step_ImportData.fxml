<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane>
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <Button mnemonicParsing="false" text="&lt;-- Back" />
          <Pane HBox.hgrow="ALWAYS" />
          <Button mnemonicParsing="false" text="Next --&gt;" />
        </items>
      </ToolBar>
   </bottom>
   <left>
      <Label text="Please select your data: (.xes, .csv formats supported)" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </left>
   <center>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <TextField HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Button alignment="CENTER_RIGHT" mnemonicParsing="false" text="Browse" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </center>
</BorderPane>

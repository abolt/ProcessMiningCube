<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
	<bottom>
		<ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
			<items>
				<Button mnemonicParsing="false" text="&lt;-- Back" />
				<Pane HBox.hgrow="ALWAYS" />
				<Button mnemonicParsing="false" text="Next --&gt;" onAction="#handleImportDataButton"/>
			</items>
		</ToolBar>
	</bottom>
	<left>
		<Label text="Please select your data: " BorderPane.alignment="CENTER">
			<BorderPane.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</BorderPane.margin>
		</Label>
	</left>
	<center>
		<HBox alignment="CENTER" BorderPane.alignment="CENTER">
			<children>
				<TextField fx:id="fileName" HBox.hgrow="ALWAYS">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</TextField>
				<Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#openFileSelectorButton" text="Browse" />
			</children>
			<BorderPane.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</BorderPane.margin>
		</HBox>
	</center>
</fx:root>
